<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="Theme.Eflake_actionbar_style" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_eflake_actionbar_style</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Eflake_actionbar_style</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Eflake_actionbar_style</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Eflake_actionbar_style</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Eflake_actionbar_style</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Eflake_actionbar_style</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_eflake_actionbar_style</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_eflake_actionbar_style</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Eflake_actionbar_style</item>
    </style>

    <style name="ActionBar.Solid.Eflake_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_eflake_actionbar_style</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_eflake_actionbar_style</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_eflake_actionbar_style</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Eflake_actionbar_style</item>
    </style>
	<!-- 定义Actionbar样式 -->
    <style name="ActionBar.Transparent.Eflake_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_eflake_actionbar_style</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Eflake_actionbar_style</item>
        <item name="android:displayOptions">showHome|useLogo|showTitle</item>
    </style>
    
      <style name="ActionBar.Transparent.Eflake_actionbar_style_notitle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_eflake_actionbar_style</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Eflake_actionbar_style</item>
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>

    <style name="PopupMenu.Eflake_actionbar_style" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_eflake_actionbar_style</item>
    </style>

    <style name="DropDownListView.Eflake_actionbar_style" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_eflake_actionbar_style</item>
    </style>

    <style name="ActionBarTabStyle.Eflake_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_eflake_actionbar_style</item>
    </style>

    <style name="DropDownNav.Eflake_actionbar_style" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_eflake_actionbar_style</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_eflake_actionbar_style</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_eflake_actionbar_style</item>
    </style>

    <style name="ProgressBar.Eflake_actionbar_style" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_eflake_actionbar_style</item>
    </style>

    <style name="ActionButton.CloseMode.Eflake_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_eflake_actionbar_style</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Eflake_actionbar_style.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Eflake_actionbar_style</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Eflake_actionbar_style</item>
    </style>
	<!-- 不带标题style版本 -->
    <style name="Theme.Eflake_actionbar_style_notitle" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Eflake_actionbar_style_notitle</item>
    </style>
</resources>